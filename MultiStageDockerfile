#git
FROM alpine/git as repo

MAINTAINER abridevops@gmail.com

WORKDIR /app
RUN git clone https://github.com/abridevops/maven-web-application

#Maven
FROM maven:3.8-jdk-11-alpine as build
WORKDIR /app
COPY --from=repo /app/maven-web-application  /app
RUN mvn install

#Tomcat
FROM tomcat:8.0.20-jre8
#COPY  /app/target/*war /usr/local/tomcat/webapps/maven-web-app.war
COPY --from=build /app/target/*war /usr/local/tomcat/webapps/
